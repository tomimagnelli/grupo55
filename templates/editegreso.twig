{% extends "layout.twig" %}

{% block contenido %}
<body>
<form class="formAltaProd" method="post" action="editegreso">

  <fieldset class="fieldAltaProd" >
    <legend>Editar egreso</legend>
    <label for="producto_id">Producto: </label>
    <select name="producto_id" id="producto_id" required>
    <option value="">Seleccione</option>
     {% for producto in productos %}
        <option {% if egreso_detalle.producto.id == producto.id %}selected="selected" {% endif %}value="{{ producto.id }}">{{ producto.nombre }} {{ producto.marca }}</option>
     {% endfor %}
    </select>

    <label for="cantidad">Cantidad: </label>
    <input type="number" name="cantidad" id="cantidad" maxlength="25" value="{{ egreso_detalle.cantidad}}" required/>

    <label for="precio_unitario">Precio unitario</label>
    <input type="number" name="precio_unitario" id="precio_unitario" maxlength="25" value="{{ egreso_detalle.precio_unitario}}" required/>


    <label for="egreso_tipo_id">Tipo venta: </label>
    <select name="egreso_tipo_id" id="egreso_tipo_id" required>
    <option value="">Seleccione</option>
       {% for tipo in tiposegreso %}
          <option {% if egreso_detalle.egreso_tipo_id.id == tipo.id %}selected="selected" {% endif %}value="{{ tipo.id }}">{{ tipo.nombre }}</option>
       {% endfor %}

    </select>


    <input type="hidden" name="egresoid" value="{{ egreso_detalle.id }}"/>
    <input type="submit" value="Modificar"/>
  </form>
  </fieldset>

</form>
</body>

{% endblock %}
