{% extends "layout.twig" %}

{% block contenido %}

 <form action="{{ baseUrl() }}/listado/altaproducto" method="get">

 <button type="submit">Alta de producto</button><br>

</form>


<table>
	<tr>
			<th id="Nombre">NOMBRE</th>
    		<th id="Marca">MARCA</th>
   			<th id="Stock">STOCK</th>
			<th id="acciones">ACCIONES</th>

	</tr>
	{% for producto in productos %}
		  <tr id="{{ producto.id }}">
				<td>{{ producto.nombre }}</td>
				<td>{{ producto.marca }}</td>
				<td>{{ producto.stock }}</td>
				<td>
					<a href="editProducto?id={{ producto.id }}"><img title="Editar" alt="Editar" src="{{ baseUrl() }}/uploads/editar.png"></a>

					<a href="delete?id={{ producto.id }}"><img title="Eliminar" alt="Eliminar" src="{{ baseUrl() }}/uploads/eliminar.png"></a>
				</td>
			</tr>
		{% endfor %}
</table>
{% include 'paginacion/paginacionListado.twig' with {'pagesCount' : pagesCount} %}

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.jquery.com/jquery.js"></script>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<script type="text/javascript">
$(function () {
    Highcharts.chart('container', {
        chart: {
            type: 'column'
        },
        title: {
            text: 'Column chart with negative values'
        },
        xAxis: {
            categories: ['Apples', 'Oranges', 'Pears', 'Grapes', 'Bananas']
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'John',
            data: [5, 3, 4, 7, 2]
        }, {
            name: 'Jane',
            data: [2, -2, -3, 2, 1]
        }, {
            name: 'Joe',
            data: [3, 4, 4, -2, 5]
        }]
    });
});
</script>
{% endblock %}
