{% extends "layout.twig" %}

{% block contenido %}

<a href="{{ baseUrl() }}/users/altausuario" target="rightframe"><input type="button" value="AGREGAR UN USUARIO" /></a>

<table summary="Tabla de usuarios del buffet">
	<tr>
		<th id="Nombre">NOMBRE</th>
		<th id="MiembroDesde">DOCUMENTO</th>
		<th>TIPO USUARIO</th>
		<th>ACCIONES</th>
		<th>HABILITADO</th>
	</tr>
		{% for usuario in usuarios %}
		  <tr id="{{ usuario.id }}">
				<td>{{ usuario.usuario }}</td>
				<td>{{ usuario.documento }}</td>
				{% if usuario.rol_id == 1 %}
				<td>Administrador</td>
				{% endif %}
				{% if usuario.rol_id == 2 %}
				<td>Usuario Online</td>
				{% endif %}
				{% if usuario.rol_id == 3 %}
				<td>Gestion</td>
				{% endif %}
				<td>
					<a href="users/edituser?id={{ usuario.id }}"> <input type="button" value="Editar" /> </a>

					<a href="users/delete?id={{ usuario.id }}"> <input type="button" value="Eliminar" /></i></a>
				</td>
				{% if usuario.habilitado == 0 %}
				<td>Si</td>
				{% else %}
				<td>No</td>
				{% endif %}


			</tr>
		{% endfor %}
	</table>

	{% include 'paginacion/paginacionUsuarios.twig' with {'pagesCount' : pagesCount} %}


{% endblock %}
