{% extends "layout.twig" %}

{% block contenido %}
  <div class="agregar">
  <a href="{{ baseUrl() }}/altausuario">AGREGAR UN USUARIO</a>
</div>

<table summary="Tabla de usuarios del buffet">
	<tr>
		<th id="Nombre">NOMBRE</th>
		<th id="MiembroDesde">DOCUMENTO</th>
		<th>ACCIONES</th>
	</tr>
		{% for usuario in usuarios %}
		  <tr id="{{ usuario.id }}">
				<td>{{ usuario.usuario }}</td>
				<td>{{ usuario.documento }}</td>
				<td>
					<a href="usuarios/show?id={{ usuario.id }}" title="Editar"><i class="fa fa-pencil"></i></a>
					<a href="usuarios/delete?id={{ usuario.id }}" title="Eliminar"><i class="fa fa-trash-o"></i></a>
				</td>
			</tr>
		{% endfor %}
	</table>


{% endblock %}
