{% extends "layout.twig" %}

{% block contenido %}
  <form class="formAltaProd" method="post" action="agregarproductoacompra">
  <fieldset class="fieldAltaProd" >
    <legend>Agregar un producto a la compra</legend>
    <label for="producto">Seleccione el producto: </label>
    <select id="producto" name="producto" required>
     <option value="" selected="selected">Seleccione</option>
     {% for producto in productos %}
     <option value="{{ producto.id }}">{{ producto.nombre }} | {{ producto.marca}}</option>
     {% endfor %}
    </select>

    <label>Cantidad:</label>
    <input type="number" name="cantidad" placeholder="Ingrese cantidad" required />
    <input type="hidden" name="compra" value="{{ compra.id }}" />
    <label>Precio unitario:</label>
    <input type="number" name="precio_unitario" placeholder="Ingrese cantidad" required />
    <label>Tipo egreso: </label>
    <select name="egreso_tipo_id">
    <option value="" selected="selected">Seleccione</option>
       {% for tipo in tiposegreso %}
          <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
       {% endfor %}

    </select>
    <input type="hidden" name="token" value={{token}} />

  	<input type="submit" value="Agregar">

  </fieldset>

</form>


{% endblock %}
