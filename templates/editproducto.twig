{% extends "layout.twig" %}

{% block contenido %}
<body>
<html>
<form class="formAltaProd" method="post" action="editproducto">

  <fieldset class="fieldAltaProd" >
    <h3>Editar Usuario</h3>
    <label for="editName">Nombre: </label>
    <input type="text" name="nombre" id="editName" maxlength="45" value="{{ producto.nombre }}" required/>
    <label for="editMarca">Marca: </label>
    <input type="text" name="marca" id="editMarca" maxlength="45" value="{{ producto.marca }}" required/>

    <label for="editStock">Stock: </label>
    <input type="number" name="stock" id="editStock" maxlength="25" value="{{ producto.stock}}" required/>

 	<label for="editStockMin">Cantidad minima de Stock: </label>
    <input type="number" name="stock_minimo" id="editStockMin" maxlength="25" value="{{ producto.stock_minimo}}" required/>

     <label for="editProovedor">Proovedor: </label>
    <input type="text" name="proovedor" id="proovedor" maxlength="25" value="{{ producto.proovedor}}" required/>

     <label for="editPrecio">Precio unitario: </label>
    <input type="number" name="precio_venta_unitario" id="editPrecio" maxlength="25" value="{{ producto.precio_venta_unitario}}" required/>

    <label>Categor&iacute;a: </label>
    <select name="categoria_id" required>
    <option value="" selected="selected">Seleccione</option>
     {% for categoria in categorias %}
        <option value="{{ categoria.id }}">{{ categoria.nombre }}</option>
     {% endfor %}
    </select>

    <label for="editDescripcion">Descripcion: </label>
    <input type="text" name="descripcion" id="editDescripcion" maxlength="25" value="{{ producto.descripcion}}" required/>


    <input type="hidden" name="productoid" value="{{ producto.id }}"/>
    <input type="submit" value="Modificar"/>
  </form>
  </fieldset>

</form>
</body>
</html>
{% endblock %}