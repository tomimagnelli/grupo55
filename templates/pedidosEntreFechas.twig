{% extends "layout.twig" %}

{% block contenido %}


<br>

<table>
	<tr>
		<th id="Pedido">FECHA</th>
    <th id="Observacion">OBSERVACION</th>
    <th id="Estado">ESTADO</th>
    <th>ACCIONES</th>

	</tr>
		{% autoescape 'html' %}
		{% for pedido in pedidos %}
 
		 <tr id="{{ pedido.id }}">
		<td>{{ pedido.fecha|date("d/m/Y H:i:s") }}</td>
		<td>{{ pedido.observacion }}</td>
        <td>{{ pedido.estado.nombre }}</td>


				<td>

          {% if pedido.estado.id == 1 %}
          	<a href="cancelarPedidoUsuario?id={{ pedido.id }}&userId={{session.id}}"> <img title="Cancelar pedido" alt=Cancelar src="{{ baseUrl() }}/uploads/cancelar.jpg"></a>

          {% endif %}

				</td>
			</tr>
    
		{% endfor %}
		{% endautoescape %}
	</table>

{% endblock %}
