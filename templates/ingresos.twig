{% extends "layout.twig" %}

{% block contenido %}
<a href="{{ baseUrl() }}/altaventa" target="rightframe"><input type="button" value="NUEVA VENTA" /></a>
<table summary="Igresos de dinero del Buffet">
	<tr>
		<th id="nombre">Nombre</th>
		<th id="marca">Marca</th>
		<th id="IngresoDescripcion">Descripcion</th>
		<th id="Cantidad">Cantidad</th>
		<th id="PrecioUnitario">Precio unitario</th>
	</tr>

		{% for ingreso_detalle in ingresos %}

	<tr>

				<td>{{ ingreso_detalle.producto.nombre}}</td>
				<td>{{ ingreso_detalle.producto.marca}}</td>
				<td>{{ ingreso_detalle.descripcion}}</td>
				<td>{{ ingreso_detalle.cantidad }}</td>
				<td>{{ ingreso_detalle.preciounitario }}</td>

		{% endfor %}

	</tr>

	</table>
	{% include 'paginacion/paginacionIngresos.twig' with {'pagesCount' : pagesCount} %}

{% endblock %}
