{% extends "layout.twig" %}

{% block contenido %}


<form class="formAltaProd" method="post" action="edituser">

  <fieldset class="fieldAltaProd" >
    <legend>Editar usuar</legend>
    <h3>Editar Usuario</h3>
    <label for="editName">Nombre: </label>
    <input type="text" name="nombre" id="editName" maxlength="45" value="{{ usuario.nombre }}" required/>
    <label for="editApellido">Apellido: </label>
    <input type="text" name="apellido" id="editApellido" maxlength="45" value="{{ usuario.apellido }}" required/>
    <label for="editTelefono">Tel&eacute;fono: </label>
    <input type="number" name="telefono" id="editTelefono" value="{{ usuario.telefono }}" required/>
    <label for="newRol">Rol: </label>
    <select id="newRol" name="rol_id" required>

     <option value="">Seleccione</option>
     <option {% if usuario.rol_id == 1 %}selected="selected" {% endif %} value="1">Administrador</option>
     <option {% if usuario.rol_id == 2 %}selected="selected" {% endif %} value="2">Usuario Online</option>
     <option {% if usuario.rol_id == 3 %}selected="selected" {% endif %}value="3">Gesti&oacute;n</option>
    </select>
    <label for="newUbicacion" id="labelUbicacion">Ubicaci&oacute;n: </label>
    <select id="newUbicacion" name="ubicacion_id">
     <option value="" >Seleccione</option>
     {% autoescape 'html' %}
     {% for ubicacion in ubicaciones %}
     <option {% if ubicacion.id == usuario.ubicacion_id.id %}
            selected="selected"{% endif %} value="{{ ubicacion.id }}">{{ ubicacion.nombre }} | {{ ubicacion.descripcion }}</option>

     {% endfor %}
     {% endautoescape %}
    </select>
    <label for="editMail">Mail: </label>
    <input type="email" name="email" id="editMail" value="{{ usuario.email }}" required/>
    <label for="editDocumento">Documento: </label>
    <input type="number" name="documento" id="editDocumento" value="{{ usuario.documento }}" required/>
    <label for="editUsername">Nombre de usuario: </label>
    <input type="text" name="user" id="editUsername" maxlength="20" value="{{ usuario.usuario }}" required/>
    <label for="editPassword">Contraseña: </label>
    <input type="password" name="pass" id="editPassword" maxlength="20" placeholder="Contrase�a" required/>
    <input type="hidden" name="userid" value="{{ usuario.id }}"/>
    <label for="habilitado">Habilitado </label>
        <select name="habilitado" id="habilitado" required>
         <option value="">Seleccione</option>
         <option {% if usuario.habilitado == 0 %}selected="selected" {% endif %} value="0">Si</option>
         <option {% if usuario.habilitado == 1 %}selected="selected" {% endif %}value="1">No</option>
        </select>
     <br><br>
     <input type="hidden" name="token" value={{token}} />
    <input type="submit" value="Modificar"/>
    </fieldset>
  </form>




{% endblock %}
